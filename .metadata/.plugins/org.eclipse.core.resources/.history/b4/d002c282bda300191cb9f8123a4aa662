import java.util.Arrays;


public class StringUtils {
	public static int eChecker(String s1, String s2) {
		if (s1.contains("e") && !s2.contains("e")) {
			return -1;
		} else if (s2.contains("e") && !s1.contains("e")) {
			return 1;
		} else
			return 0;
	};

	public static void main(String[] args) {

		//ex1();
		ex2();
	}
	
	public static void ex2() {
		String longer = betterString("asassa","asdsadsa",(arg1,arg2)->arg1.length()>arg2.length());
		System.out.println(longer);
	}
	
	public static String betterString(String s1, String s2, TwoStringPredicate condition) {
		if(condition.isFirstBetter(s1,s2)) {
			return s1;
		}
		else {
			return s2;
		}
	}

	public static void ex1() {
		String[] exampleArray = { "my", "name", "is", "rajiv" };
		Arrays.sort(exampleArray, (s1, s2) -> s1.length() - s2.length());
		Arrays.sort(exampleArray, (s1, s2) -> -(s1.length() - s2.length()));
		Arrays.sort(exampleArray, (s1, s2) -> s1.charAt(0) - s2.charAt(0));
		
		Arrays.sort(exampleArray, StringUtils::eChecker);//Method Reference
		System.out.println(Arrays.asList(exampleArray));
	}
	
}

import java.util.Arrays;

public class BasicLambda {
	
	public static void printList(String[] stringArray) {
		for(String str:stringArray) {
			System.out.print(str+" ");
		}
		System.out.println();
	}

	public static void main(String[] args) {

		String[] exampleArray = { "my", "name", "is", "rajiv" };
		Arrays.sort(exampleArray, (s1, s2) -> s1.length() - s2.length());
		printList(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> -(s1.length() - s2.length()));
		printList(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> s1.charAt(0) - s2.charAt(0));
		printList(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> {
			if (s1.contains("e")) {
				return -1;
			} else if (s2.contains("e")) {
				return 1;
			} else {
				return 0;
			}
		});
		printList(exampleArray);
	}

}

import java.util.Arrays;

public class BasicLambda {

	public static void main(String[] args) {

		String[] exampleArray = { "my", "name", "is", "rajiv" };
		Arrays.sort(exampleArray, (s1, s2) -> s1.length() - s2.length());
		System.out.println(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> -(s1.length() - s2.length()));
		System.out.println(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> s1.charAt(0) - s2.charAt(0));
		System.out.println(exampleArray);
		Arrays.sort(exampleArray, (s1, s2) -> {
			if (s1.contains("e")) {
				return -1;
			} else if (s2.contains("e")) {
				return 1;
			} else {
				return 0;
			}
		});
		System.out.println(exampleArray);
	}

}
